# Nginx конфигурация для HandWood
# Сохраните как /etc/nginx/sites-available/handwood
# Активируйте: sudo ln -s /etc/nginx/sites-available/handwood /etc/nginx/sites-enabled/
# Тестируйте: sudo nginx -t
# Перезагрузите: sudo systemctl reload nginx

# HTTP → HTTPS редирект
server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com www.your-domain.com;

    return 301 https://$server_name$request_uri;
}

# HTTPS с Node.js проксированием
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name your-domain.com www.your-domain.com;

    # SSL сертификаты (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;

    # SSL параметры (рекомендуемые)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Безопасность
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Корневая директория
    root /var/www/handwood;
    index index.php index.html index.htm;

    # Логи
    access_log /var/log/nginx/handwood_access.log combined;
    error_log /var/log/nginx/handwood_error.log warn;

    # ========================================
    # СТАТИЧЕСКИЕ ФАЙЛЫ
    # ========================================

    # Кешируемые статические файлы (версионированные)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header X-Content-Type-Options "nosniff" always;
        access_log off;
    }

    # HTML файлы (без кеша)
    location ~* \.html?$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate";
    }

    # ========================================
    # NODE.JS ПРОКСИРОВАНИЕ
    # ========================================

    # Все остальные запросы → Node.js приложение
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;

        # Заголовки
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Буферизация
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;

        # Не кешируем
        proxy_cache_bypass $http_upgrade;
    }

    # ========================================
    # ДОПОЛНИТЕЛЬНО
    # ========================================

    # Скрывать информацию о версии
    server_tokens off;

    # Gzip сжатие
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;
    gzip_disable "msie6";

    # Запретить прямой доступ к конфигам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# ========================================
# Примечания:
# ========================================
# 1. Измените "your-domain.com" на ваш домен
# 2. Убедитесь что Node.js приложение слушает на localhost:3000
# 3. SSL сертификаты должны быть установлены (Let's Encrypt)
# 4. Проверьте пути к логам существуют: sudo mkdir -p /var/log/nginx
# 5. Установите права: sudo chown -R www-data:www-data /var/www/handwood
