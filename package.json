{
  "name": "handwood-site",
  "version": "1.0.0",
  "description": "SSR сайт мастерской HandWood — изделия из дерева, металла и 3D-печати",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "init-admin": "node src/scripts/init-admin.js",
    "migrate": "node src/scripts/migrate.js",
    "build": "node build-dist.js",
    "prod": "NODE_ENV=production node src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop handwood-app",
    "pm2:restart": "pm2 restart handwood-app"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "connect-sqlite3": "^0.9.16",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.2",
    "express-session": "^1.17.3",
    "fs-extra": "^11.3.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}
