<div class="gallery-item" data-category="<%= typeof category_id !== 'undefined' ? category_id : '' %>">
  <picture>
    <% if (typeof image !== 'undefined' && image) { %>
      <source srcset="<%= image %>" type="image/webp">
      <img src="<%= image %>" alt="<%= title %>" loading="lazy" class="gallery-item-image">
    <% } else { %>
      <source srcset="https://via.placeholder.com/400x300.webp" type="image/webp">
      <img src="https://via.placeholder.com/400x300?text=<%= encodeURIComponent(title) %>" alt="<%= title %>" loading="lazy" class="gallery-item-image">
    <% } %>
  </picture>
  
  <div class="gallery-item-overlay">
    <span class="gallery-item-action">Подробнее →</span>
  </div>

  <div class="gallery-item-content">
    <div>
      <h3 class="gallery-item-title"><%= title %></h3>
      <% if (typeof description !== 'undefined' && description) { %>
        <p class="gallery-item-description"><%= description %></p>
      <% } %>
    </div>
    
    <div class="gallery-item-meta">
      <% if (typeof price !== 'undefined' && price) { %>
        <p class="gallery-item-price"><%= price %> ₽</p>
      <% } %>
      <% if (typeof category !== 'undefined' && category) { %>
        <p class="gallery-item-category"><%= category %></p>
      <% } %>
    </div>
  </div>
</div>