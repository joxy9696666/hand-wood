    <style>
      /* ===== –ö–ê–¢–ï–ì–û–†–ò–ò - –ê–î–ê–ü–¢–ò–í–ù–ê–Ø –°–ï–¢–ö–ê ===== */

      .categories-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .category-card {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        transition: all 0.3s;
        background: #fafaf8;
        position: relative;
        overflow: hidden;
      }

      .category-card:hover {
        box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        border-color: #8B5E3C;
        background: white;
        transform: translateY(-2px);
      }

      .category-icon {
        font-size: 2.5rem;
        margin-bottom: 0.8rem;
      }

      .category-info {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        flex: 1;
      }

      .category-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #4A2C1F;
        line-height: 1.3;
      }

      .category-desc {
        color: #666;
        font-size: 0.85rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .category-meta {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        margin-top: 0.8rem;
        font-size: 0.85rem;
        padding-top: 0.8rem;
        border-top: 1px solid #f0f0f0;
      }

      .product-count {
        color: #8B5E3C;
        font-weight: 600;
      }

      .date-created {
        color: #999;
        font-size: 0.8rem;
      }

      .category-actions {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        margin-top: auto;
        padding-top: 1rem;
      }

      .btn-action {
        padding: 0.6rem 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
        text-align: center;
        font-size: 0.85rem;
        text-decoration: none;
        display: inline-block;
        flex: 1;
        white-space: nowrap;
      }

      .btn-edit {
        background: #2196F3;
        color: white;
      }

      .btn-edit:hover {
        background: #0b7dda;
      }

      .btn-delete {
        background: #f44336;
        color: white;
      }

      .btn-delete:hover {
        background: #da190b;
      }

      .btn-view {
        background: #666;
        color: white;
      }

      .btn-view:hover {
        background: #555;
      }

      /* ===== –§–û–†–ú–ê –†–ï–î–ê–ö–¢–ò–†–û–í–ê–ù–ò–Ø ===== */
      .category-form-edit {
        background: #f5f3f0;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
        display: none;
      }

      .category-form-edit.active {
        display: grid;
        gap: 0.8rem;
      }

      .category-form-edit input,
      .category-form-edit textarea {
        padding: 0.6rem;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-family: inherit;
        font-size: 0.9rem;
      }

      .category-form-edit input:focus,
      .category-form-edit textarea:focus {
        outline: none;
        border-color: #8B5E3C;
        box-shadow: 0 0 0 2px rgba(139, 94, 60, 0.1);
      }

      .form-actions {
        display: flex;
        gap: 0.6rem;
      }

      .btn-submit {
        padding: 0.8rem 1.6rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.95rem;
        background: linear-gradient(135deg, #8B5E3C, #d47052);
        color: white;
        width: 100%;
      }

      .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(212, 112, 74, 0.3);
      }

      .btn-save {
        background: #4CAF50;
        color: white;
        flex: 1;
      }

      .btn-save:hover {
        background: #45a049;
      }

      .btn-cancel {
        background: #999;
        color: white;
        flex: 1;
      }

      .btn-cancel:hover {
        background: #777;
      }

      .btn-cancel:hover {
        background: #777;
      }

      .empty-state {
        text-align: center;
        padding: 3rem 1rem;
      }

      .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
      }

      .empty-state p {
        color: #666;
        font-size: 1rem;
      }

      /* ===== –ê–î–ê–ü–¢–ò–í–ù–û–°–¢–¨ ===== */
      /* –ü–ö –≤–µ—Ä—Å–∏—è: 4-6 –≤ —Ä—è–¥ */
      @media (min-width: 1400px) {
        .categories-list {
          grid-template-columns: repeat(6, 1fr);
        }
      }

      @media (min-width: 1200px) and (max-width: 1399px) {
        .categories-list {
          grid-template-columns: repeat(5, 1fr);
        }
      }

      @media (min-width: 1024px) and (max-width: 1199px) {
        .categories-list {
          grid-template-columns: repeat(4, 1fr);
        }
      }

      /* –ü–ª–∞–Ω—à–µ—Ç: 2-3 –≤ —Ä—è–¥ */
      @media (min-width: 768px) and (max-width: 1023px) {
        .categories-list {
          grid-template-columns: repeat(3, 1fr);
        }

        .category-card {
          padding: 1rem;
        }

        .btn-action {
          padding: 0.5rem 0.6rem;
          font-size: 0.8rem;
        }
      }

      @media (min-width: 600px) and (max-width: 767px) {
        .categories-list {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      /* –¢–µ–ª–µ—Ñ–æ–Ω: 1 –≤ —Ä—è–¥ */
      @media (max-width: 599px) {
        .categories-list {
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .category-card {
          padding: 1rem;
        }

        .category-actions {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 0.5rem;
        }

        .btn-action {
          padding: 0.5rem;
          font-size: 0.75rem;
        }

        .category-form-edit {
          padding: 0.8rem;
        }

        .form-actions {
          flex-direction: column;
          gap: 0.4rem;
        }

        .btn-save,
        .btn-cancel {
          padding: 0.6rem;
        }
      }
    </style>
</head>
<body>
    <div class="admin-wrapper">
