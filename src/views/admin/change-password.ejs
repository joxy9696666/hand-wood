  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Lora', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #4A2C1F 0%, #2c1810 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }

    .container {
      background: white;
      padding: 2.5rem;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 450px;
      animation: slideIn 0.4s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .header {
      text-align: center;
      margin-bottom: 2rem;
    }

    h1 {
      font-size: 1.8rem;
      color: #4A2C1F;
      margin-bottom: 0.5rem;
    }

    .user-info {
      color: #666;
      font-size: 0.95rem;
    }

    .user-info strong {
      color: #8B5E3C;
      font-weight: 600;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.7rem;
      color: #4A2C1F;
      font-weight: 600;
      font-size: 0.95rem;
    }

    .form-group input {
      width: 100%;
      padding: 0.9rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 1rem;
      transition: all 0.3s;
      font-family: inherit;
    }

    .form-group input:focus {
      outline: none;
      border-color: #8B5E3C;
      box-shadow: 0 0 0 3px rgba(139, 94, 60, 0.1);
    }

    .form-group input::placeholder {
      color: #ccc;
    }

    .form-group input:invalid:not(:placeholder-shown) {
      border-color: #f44336;
      box-shadow: 0 0 0 3px rgba(244, 67, 54, 0.1);
    }

    .password-hint {
      font-size: 0.85rem;
      color: #999;
      margin-top: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.3rem;
    }

    .submit-btn {
      width: 100%;
      padding: 0.95rem;
      background: linear-gradient(135deg, #8B5E3C 0%, #6B4423 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-top: 0.5rem;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(139, 94, 60, 0.4);
    }

    .submit-btn:active {
      transform: translateY(0);
    }

    .error-message {
      background: linear-gradient(135deg, #ffebee 0%, #fce4ec 100%);
      color: #c5192d;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      border-left: 4px solid #c5192d;
      font-size: 0.9rem;
      animation: shake 0.3s ease-in-out;
    }

    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-5px); }
      75% { transform: translateX(5px); }
    }

    .success-message {
      background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
      color: #2e7d32;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      border-left: 4px solid #4CAF50;
      font-size: 0.9rem;
      animation: slideIn 0.3s ease-out;
    }

    .links {
      text-align: center;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e0e0e0;
    }

    .links a {
      color: #8B5E3C;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .links a:hover {
      color: #6B4423;
    }

    @media (max-width: 480px) {
      .container {
        padding: 2rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .user-info {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
